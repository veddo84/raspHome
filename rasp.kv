#:kivy 1.9.1
ScreenManagement:
    SlideShow:
    WLAN:
    MenuUI:
    PowerOff:

<SlideShow>:
    name: 'slideshow'
    slide: slide
    Image:
        id: slide
        keep_data: True
        allow_stretch: True
        nocache: True
<MenuUI>:
    name: 'menu'
    GridLayout:
        cols:3
        orientation: 'vertical'
        padding: 20
        spacing: 10
        size: root.size
        Button:
            size: 100,100
            Image:
                source:"icons/IKONS/PNG/128/cog.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size:100, 100
                allow_stretch: True
        Button:
            size: 100,100
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'wlan'
            Image:
                source:"icons/IKONS/PNG/128/wifi_3.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size:100, 100
                allow_stretch: True


        Button:
            size: 100,100
            Image:
                source:"icons/IKONS/PNG/128/music.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size:100, 100
                allow_stretch: True

        Button:
            size: 100,100
            Image:
                source:"icons/IKONS/PNG/128/rss.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size:100, 100
                allow_stretch: True
        Button:
            size: 100,100
            Image:
                source:"icons/IKONS/PNG/128/brightness_low.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size:100, 100
                allow_stretch: True
        Button:
            size: 100,100
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'power'
            Image:
                source:"icons/IKONS/PNG/128/power.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size:100, 100
                allow_stretch: True
<WLAN>:
    name: 'wlan'
    wlanssid: ''
    wlanpsk: ''
    android_qrcode: android
    ios_qrcode: ios
    windows_qrcode: windows

    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': 0.5}
        size_hint: 0.8, 1
        padding: 20
        spacing: 10
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.1
            Label:
                size_hint: 1, 0.5
                text: 'WLAN-SSID: %s' % root.wlanssid
            Label:
                size_hint: 1, 0.5
                text: 'WLAN-Passphrase: %s' % root.wlanpsk
        BoxLayout:
            size_hint: 1, 0.4
            padding: 20
            spacing: 10
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Android'
                Image:
                    id: android
                    nocache: True
                    source: '/var/guestwlan/android.jpg'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'iOS'
                Image:
                    id: ios
                    nocache: True
                    source: '/var/guestwlan/ios.jpg'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Windows'
                Image:
                    id: windows
                    nocache: True
                    source: '/var/guestwlan/windows.jpg'
        Button:
            size_hint: 1, 0.1
            text: 'Zur√ºck'
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'

<PowerOff>:
    name: 'power'
    GridLayout:
        cols:1
        rowns:1
        orientation: 'horizontal'
        padding: 20
        spacing: 10
        row_default_height: '88dp'
        row_force_default: True
        Button:
            size: 200, 150
            text: 'Abbrechen'
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'

        Button:
            size: 200, 150
            text: 'Herunterfahren'
        Button:
            size: 100, 150
            text: 'Neu Starten'